//
//	HAL_UART_Transmit(&huart3, (uint8_t*)"AT+CWDHCP=1,1\r\n", strlen("AT+CWDHCP=1,1\r\n"), 100);
//	HAL_Delay(1000);
//	ESP_Clear_Buffer();
//
//	HAL_UART_Transmit(&huart3, (uint8_t*)"AT+CIPMUX=1\r\n", strlen("AT+CIPMUX=1\r\n"), 100);
