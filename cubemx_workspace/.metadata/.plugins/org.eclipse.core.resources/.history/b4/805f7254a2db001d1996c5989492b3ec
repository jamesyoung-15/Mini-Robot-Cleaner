void ESP_Clear_Buffer()
{
	memset(buffer, 0, 1000);
	buffer_index = 0;
}


void messageHandler()
{
	__HAL_UART_DISABLE_IT(&huart3, UART_IT_RXNE);
	if(buffer_index!=0)
	{
		change_text((char*)buffer);
	}
	ESP_Clear_Buffer();
	__HAL_UART_ENABLE_IT(&huart3, UART_IT_RXNE);
}


